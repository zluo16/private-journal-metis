<%= form_tag login_path do %>
  <label>Username</label>
  <%= text_field_tag 'username', nil, required: true, class: 'validate', placeholder: 'Username' %>
  <label>Password</label>
  <%= password_field_tag 'password', nil, required: true, class: 'validate', placeholder: 'Password' %>
  <%= submit_tag 'Login' %>
<% end %>
