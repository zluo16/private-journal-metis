<%= form_for(@user) do |f| %>
  <%= f.label :username, 'Create Username' %>
  <%= f.text_field(:username, placeholder: 'Username', require: true) %><br><br>
  <%= f.label :password, 'Password' %>
  <%= f.password_field(:password, placeholder: 'Password', require: true) %><br><br>
  <%= f.label :password_confirmation, 'Confirm Password' %>
  <%= f.password_field(:password_confirmation, placeholder: 'Password Confirmation', require: true) %><br><br>
  <%= f.submit %>
<% end %>
